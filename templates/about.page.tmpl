{{template "base" .}}

{{define "content"}}
    <div class="container">
        <dov class="row">
            <div class="col-12">
                <h1>About</h1>
                <p>This is from the template: {{index .StringMap "test"}}</p>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your ip address yet. Visit the <a href="/">home page</a>
                    {{end}}
                </p>
            </div>
        </dov>
    </div>

{{end}}